    <style name="PlayerTitleStyle">
        <item name="android:fontFamily">@font/mi_sans_demibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlayerAuthorStyle">
        <item name="android:fontFamily">@font/mi_sans_normal</item>
